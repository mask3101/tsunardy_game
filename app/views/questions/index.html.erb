<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<%= link_to 'New Question', new_question_path %>
<br/>
<br/>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td class="show"><%= question.question %></td>
        <td class="show"><%= question.answer %></td>
        <td class="show"><%= link_to 'Show', question %></td>
        <td class="show"><%= link_to 'Edit', edit_question_path(question) %></td>
        <td class="show"><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td class="show">Nombre de Usuario</td>
      <td class="show">Mostrar Info</td>
      <td class="show">Editar</td>
      <td class="show">Borrar Usuario</td>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td class="show"><%= user.username %></td>
        <td class="show"><%= link_to 'Show', user %></td>
        <td class="show"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="show"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<%= button_to 'New Category', new_category_path, :method => "get", :class => "btn btn-success" %><br/><br/>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="show text-center"><%= category.name %></td>
        <td class="show text-center"><%= link_to 'Show', category %></td>
        <td class="show text-center"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td class="show text-center"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="well">
<%= form_for @game do |f| %>
  <div class="control-group">
    <%= f.label :category_ids, 'Selecciona las Categorias' %>
    <div class='checkbox'>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: 'checkbox inline') {cb.check_box(class: 'checkbox') + cb.text} %>
      <% end -%>
    </div>
  </div>
    <div class='control-group'>
      <%= f.label :num_questions, 'Numero de preguntas' %>
      <br/>
      <%= f.text_field :num_questions %>
    </div>
    <br/>
    <%= f.submit(@game.new_record? ? 'Agregar Jugadores' : 'Actualizar Juego', class: 'btn btn-primary')%>
<% end %>
</div>

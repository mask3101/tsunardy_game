<%= include_gon(:init => true) %>
<%= javascript_include_tag "question_question" %>
<% if @imgquest %>
<div id="question_side" class="row">
<% end -%>
<div class="barra2">
<h2 class="pregunta well barra well2"><%= @quest_info.question %></h2>
<br/>
</div>
<% if @imgquest %>
</div>
<% end -%>
<% if @imgquest %>
<div class="question_container">
<%= image_tag url_for(:controller => "images", :action => "show", :id => @imgquest.id), class: "quest"%>
</div>
<% end %>
<br/>
<div>
<%= button_tag "respuesta" , :onclick => "visibleDiv('answer');", :class => 'btn btn-success' %>
</div>

<br/>
<div class="main" style="padding-left: 20px;">
<div class="progress barra">
<div class="progress-bar progress-bar-striped progress-bar-success active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%" id="progress-bar">

</div>

</div>
<p id="segundos" class="text-center timer"><%= @game.tiempo %> segundos</p>

<div id="answer" style="display: none;">
<div class="barra2">
<h2 class="pregunta well barra well2"><%= @quest_info.answer %></h2>
</div>
<%= form_tag(games_game_path(@game.id), method: "get") do %>
  <%= button_tag "regresar al juego", :class => 'btn btn-success' %>
<% end %>
<table border="0" width="100%">
    <tbody>
        <td>
        <ul class="nav well barra">
          <% @player.each do |player| %>
            <li>
              <div class='span0 nav_item'>
                <div class="well text-center jugador">
                  <div class="text-center">
                    <%= link_to the_points_game_player_path(player, :id => player.id, :game_id => player.game_id, :points_val => @quest_info.difficulty, :sum => true), class: 'pointo',:method => 'PUT', remote: true do %>
                      <p><%= image_tag("plus_add_blue", size: "16") %></p>
                    <% end -%>
                  </div>
                  <p><%= player.name %></p>
                  <span class="points-count" data-id="<%= player.id %>">
                  <%= player.points %>
                  </span>
                  <p></p>
                  <div class="text-center">
                    <%= link_to the_points_game_player_path(player, :id => player.id, :game_id => player.game_id, :points_val => @quest_info.difficulty, :sum => false), class: 'pointo', :method => 'PUT', remote: true do %>
                      <p><%= image_tag("plus_add_minus", size: "16") %></p>
                    <% end -%>
                  </div>
              </div>
            </li>
          <% end %>
        </ul>
      </td>
      </tr>
    </tbody>
  </table>



</div>
</div>